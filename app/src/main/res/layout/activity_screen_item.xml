<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    android:background="#fff"
    android:elevation="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activityValue"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:gravity="clip_vertical|right|center_vertical"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nappyChangeTypeIcon"
        app:layout_constraintStart_toEndOf="@+id/daily_date" />

    <TextView
        android:id="@+id/daily_date"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginBottom="4dp"
        android:gravity="clip_horizontal|clip_vertical|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/activityDate"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:gravity="clip_horizontal|center_vertical"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/daily_date"
        app:layout_constraintEnd_toStartOf="@+id/feedIcon"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/activitySummary"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="8dp"
        android:gravity="clip_horizontal|center_vertical"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/activityValue"
        app:layout_constraintStart_toEndOf="@+id/feedIcon" />

    <ImageView
        android:id="@+id/activityIcon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/daily_date"
        app:srcCompat="@android:drawable/btn_star" />

    <ImageView
        android:id="@+id/nappyChangeTypeIcon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="4dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activityValue"
        app:srcCompat="@android:drawable/btn_star" />

    <ImageView
        android:id="@+id/feedIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/activityValue"
        app:srcCompat="@drawable/feed_lg"
        tools:layout_editor_absoluteX="296dp" />

</androidx.constraintlayout.widget.ConstraintLayout>